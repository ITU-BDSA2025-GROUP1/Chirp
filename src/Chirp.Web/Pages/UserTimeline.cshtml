@page "/{author}"
@model Chirp.Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

@if (Model.Profile is null)
{
    <div class="error">We could not find that user.</div>
}
else
{
    <div class="user-info-page">
        <section class="user-info-header">
            <h2>@Model.Profile.Name</h2>
            <p class="user-email">@(!string.IsNullOrWhiteSpace(Model.Profile.Email) ? Model.Profile.Email : "Email not provided")</p>
            <div class="user-stats">
                <span><strong>@Model.Profile.FollowerCount</strong> Followers</span>
                <span><strong>@Model.Profile.FollowingCount</strong> Following</span>
            </div>

            @if (Model.ViewingOwnProfile)
            {
                <div class="follow-hint">This is your profile overview.</div>
            }
            else if (Model.IsFollowingProfile.HasValue)
            {
                var handler = Model.IsFollowingProfile.Value ? "Unfollow" : "Follow";
                var label = Model.IsFollowingProfile.Value ? "Unfollow" : "Follow";
                <form method="post" asp-page-handler="@handler" class="follow-toggle-form">
                    <input type="hidden" name="profileName" value="@Model.Profile.Name" />
                    <input type="hidden" name="page" value="@Model.CurrentPage" />
                    <button type="submit" class="follow-btn">@label @Model.Profile.Name</button>
                </form>
            }
        </section>

        <section class="user-following">
            <h3>Following</h3>
            @if (Model.FollowingNames.Count > 0)
            {
                <ul class="following-list">
                    @foreach (var followee in Model.FollowingNames)
                    {
                        <li><a href="/@followee">@followee</a></li>
                    }
                </ul>
            }
            else
            {
                <p class="muted">Not following anyone yet.</p>
            }
        </section>

        <section class="user-cheeps">
            <h3>
                @(Model.ViewingOwnProfile
                    ? "Latest from you & the people you follow"
                    : $"Latest from {Model.Profile.Name}")
            </h3>

            @if (Model.Cheeps.Any())
            {
                <ul id="messagelist" class="cheeps">
                    @foreach (var cheep in Model.Cheeps)
                    {
                        <li class="fade-in">
                            <div class="cheep-header">
                                <strong><a href="/@cheep.Author">@cheep.Author</a></strong>
                                <small class="cheep-timestamp">@cheep.Timestamp</small>
                            </div>
                            <p>@cheep.Message</p>
                            <div class="cheep-meta">
                                <span class="cheep-likes">
                                    @(cheep.LikedByCurrentUser ? "❤️" : "🤍") @cheep.LikeCount
                                </span>
                            </div>
                        </li>
                    }
                </ul>

                <div class="pagination">
                    @if (Model.CurrentPage > 1)
                    {
                        <a href="/@Model.Profile.Name?page=@(Model.CurrentPage - 1)">« Previous</a>
                    }
                    <span>Page @Model.CurrentPage</span>
                    <a href="/@Model.Profile.Name?page=@(Model.CurrentPage + 1)">Next »</a>
                </div>
            }
            else
            {
                <em>There are no cheeps so far.</em>
            }
        </section>
    </div>
}
