<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>

    <div class = "navigation">
        @if (User.Identity.IsAuthenticated)
        { 
            <div class ="navigation-links">
                <a href = "/@(User.Identity.Name)"> My timeline </a> 
                <a href = "/" > Public timeline </a>
                <!-- Add a logout -->
                <form method="post" action="/Logout">
                    <button type="submit"> Logout (@User.Identity.Name) </button>

            </div>
        }       
        else 
        {
            <div class ="navigation-links">
                <a href = "/" > Public timeline </a>
                <a href = "/Register"> Register </a>
                <a href = "/Login"> Login </a>
                <!-- Add a register -->
                <a href = "/Identiry/Account/Register"> Register </a>
                <!-- Add a login -->
                <a href = "/Identity/Account/Login"> Login </a>
            </div>
        }
    </div>

    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
